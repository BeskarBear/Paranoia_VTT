<section class="paranoia-item">
  <header class="sheet-header">
    <input name="name" type="text" value="{{item.name}}" placeholder="Mutant Power" />
  </header>
  <div class="item-body">
    <div class="form-group">
      <label>Purpose</label>
      <textarea name="system.purpose">{{system.purpose}}</textarea>
    </div>
    <div class="form-group">
      <label>Warning</label>
      <textarea name="system.warning">{{system.warning}}</textarea>
    </div>
    <div class="form-group">
      <label>Notes</label>
      <textarea name="system.notes">{{system.notes}}</textarea>
    </div>
  </div>
</section>
