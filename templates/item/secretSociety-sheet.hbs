<section class="paranoia-item">
  <header class="sheet-header">
    <input name="name" type="text" value="{{item.name}}" placeholder="Secret Society" />
  </header>
  <div class="item-body">
    <div class="form-group">
      <label>Purpose</label>
      <textarea name="system.purpose">{{system.purpose}}</textarea>
    </div>
    <div class="form-group">
      <label>Modifier (Plus)</label>
      <input name="system.modifiers.plus" type="text" value="{{system.modifiers.plus}}" />
    </div>
    <div class="form-group">
      <label>Modifier (Minus)</label>
      <input name="system.modifiers.minus" type="text" value="{{system.modifiers.minus}}" />
    </div>
    <div class="form-group">
      <label>Notes</label>
      <textarea name="system.notes">{{system.notes}}</textarea>
    </div>
  </div>
</section>
