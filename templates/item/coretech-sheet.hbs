<section class="paranoia-item">
  <header class="sheet-header">
    <input name="name" type="text" value="{{item.name}}" placeholder="Coretech / App" />
  </header>
  <div class="item-body">
    <div class="form-group">
      <label>Level</label>
      <input name="system.level" type="number" value="{{system.level}}" />
    </div>
    <div class="form-group">
      <label>App</label>
      <input name="system.app" type="text" value="{{system.app}}" />
    </div>
    <div class="form-group">
      <label>Notes</label>
      <textarea name="system.notes">{{system.notes}}</textarea>
    </div>
  </div>
</section>
